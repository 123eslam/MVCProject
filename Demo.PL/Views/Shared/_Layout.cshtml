<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Company System</title>
    <!-- تحسين ترتيب وأسلوب تحميل ملفات CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Demo.PL.styles.css" asp-append-version="true" />
    <!-- استخدام CDN أكثر موثوقية لـ Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    <!-- إضافة meta tags مهمة -->
    <meta name="description" content="Company Management System">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
            <div class="container">
                <!-- تحسين شعار الشركة -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/companylogo.jpg" alt="Company Logo" class="d-inline-block align-top logo rounded shadow-sm" height="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        <!-- تبسيط عناصر القائمة -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Department" asp-action="Index">
                                <i class="fas fa-building me-1"></i>Departments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Employees
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cog me-1"></i>Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Index">Users</a></li>
                                <li><a class="dropdown-item" asp-controller="Role" asp-action="Index">Roles</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Project" asp-action="Index">
                                <i class="fas fa-project-diagram me-1"></i>Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="WorksOn" asp-action="Index">
                                <i class="fas fa-tasks me-1"></i>Works
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-light" asp-controller="Acount" asp-action="SignOut">
                            <i class="fas fa-sign-out-alt me-1"></i>Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        @RenderBody()
    </main>

    <footer class="border-top footer mt-auto py-3 bg-light text-center">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - Company</span> |
            <a class="text-decoration-none" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- تحسين ترتيب وأسلوب تحميل ملفات JavaScript -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("ValidationScripts", required: false)
</body>
</html>