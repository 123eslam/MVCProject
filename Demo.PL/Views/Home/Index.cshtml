@{
    ViewData["Title"] = "Home Page";
}

<div class="home-page">
    <!-- Hero Section -->
    <div class="hero-section text-center py-5 bg-light mb-5">
        <div class="container">
            <h1 class="display-3 fw-bold mb-4">Welcome to Company System</h1>
            <p class="lead fs-4 mb-4">Your complete solution for enterprise management</p>
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Department" asp-action="Index" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-building me-2"></i>Departments
                </a>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary btn-lg px-4">
                    <i class="fas fa-users me-2"></i>Employees
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-section mb-5">
        <div class="container">
            <h2 class="text-center mb-5">Key Features</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-sitemap feature-icon text-primary mb-3"></i>
                            <h3 class="h4">Department Management</h3>
                            <p>Easily organize and manage all company departments with our intuitive interface.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-user-tie feature-icon text-primary mb-3"></i>
                            <h3 class="h4">Employee Directory</h3>
                            <p>Comprehensive employee management system with advanced search capabilities.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-project-diagram feature-icon text-primary mb-3"></i>
                            <h3 class="h4">Project Tracking</h3>
                            <p>Monitor all company projects and assignments in one centralized location.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="stats-section bg-primary text-white py-4 mb-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="p-3">
                        <h3 class="fw-bold">25+</h3>
                        <p class="mb-0">Departments</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="p-3">
                        <h3 class="fw-bold">500+</h3>
                        <p class="mb-0">Employees</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="p-3">
                        <h3 class="fw-bold">100+</h3>
                        <p class="mb-0">Active Projects</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="p-3">
                        <h3 class="fw-bold">99%</h3>
                        <p class="mb-0">Satisfaction</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="cta-section text-center py-5">
        <div class="container">
            <h2 class="mb-4">Ready to get started?</h2>
            <p class="lead mb-4">Join thousands of companies managing their workforce efficiently</p>
            <a asp-controller="Acount" asp-action="Register" class="btn btn-success btn-lg px-5">
                <i class="fas fa-rocket me-2"></i>Get Started Now
            </a>
        </div>
    </div>
</div>


