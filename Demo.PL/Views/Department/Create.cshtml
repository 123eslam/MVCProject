@model DepartmentToCreateDto
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>
    <form method="post" asp-controller="Department" asp-action="Create" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-floating mt-3">
            <input class="form-control" asp-for="Code" placeholder="">
            <label asp-for="Code">Code</label>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" asp-for="Name" placeholder="">
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating mt-3">
            <textarea class="form-control" asp-for="Description" placeholder=""></textarea>
            <label asp-for="Description">Description</label>
        </div>
        <div class="form-floating mt-3">
            <input type="date" class="form-control" asp-for="CreationDate" placeholder="">
            <label asp-for="CreationDate">Creation Date</label>
        </div>
        <div class="m-auto mt-4">
            <input type="submit" class="btn btn-primary" value="Create">
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

