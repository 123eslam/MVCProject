@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="text-danger"></div>
		<form asp-action="Register">
			<input class="text" asp-for="FName" placeholder="Enter first name" required=""> 
			<span asp-validation-for="FName" class="text-danger mb-3"></span>
			<br />
			<input class="text" asp-for="LName" placeholder="Enter last name" required="">
			<span asp-validation-for="LName" class="text-danger mb-3"></span>
			<br />
			<input class="text" asp-for="Email" placeholder="Enter your email" required="">
			<span asp-validation-for="Email" class="text-danger mb-3"></span>
			<br />
			<input class="text" asp-for="Password" placeholder="Enter your password" required="">
			<span asp-validation-for="Password" class="text-danger mb-3"></span>
			<br />
			<input class="text" asp-for="ConfirmPassword" placeholder="Enter your confirm password" required="">
			<span asp-validation-for="ConfirmPassword" class="text-danger mb-3"></span>
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="Login" > Login Now!</a></p>
	</div>
</div>

@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}
