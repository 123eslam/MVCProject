@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="text-danger"></div>
		<form asp-action="ResetPassword">
			<input class="text" asp-for="Password" placeholder="Enter your password" required="">
			<span asp-validation-for="Password" class="text-danger mb-3"></span>
			<br />
			<input class="text" asp-for="ConfirmPassword" placeholder="Enter your confirm password" required="">
			<span asp-validation-for="ConfirmPassword" class="text-danger mb-3"></span>
			<br />
			<input type="submit" value="RESET PASSWORD">
		</form>
	</div>
</div>

@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}

